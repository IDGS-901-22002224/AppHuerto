<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- Header con gradiente y mejor tipografía -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_gradient"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvModuleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meteorología"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:elevation="2dp" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/accent_divider"
                    android:alpha="0.8" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tarjeta principal del clima con diseño moderno -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWeather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Información de ubicación y fecha -->
                <LinearLayout
                    android:id="@+id/locationInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/weatherIconContainer">

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="León, Guanajuato"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Hoy, 27 Mayo"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Icono del clima con mejor posicionamiento -->

                <!-- Temperatura principal -->

                <androidx.cardview.widget.CardView
                    android:id="@+id/weatherIconContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@color/icon_background"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="9dp"
                    app:layout_constraintBottom_toBottomOf="@id/locationInfo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/locationInfo"
                    app:layout_constraintVertical_bias="0.0">

                    <ImageView
                        android:id="@+id/tvWeatherIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:contentDescription="Icono del clima"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_weather_sunny" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/temperatureContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/locationInfo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvCurrentTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28"
                        android:textSize="72sp"
                        android:textStyle="bold"
                        android:textColor="@color/temperature_color"
                        android:fontFamily="sans-serif-light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°C"
                        android:textSize="24sp"
                        android:textColor="@color/temperature_color"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvWeatherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soleado"
                    android:textSize="18sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/temperatureContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Detalles del clima en grid mejorado -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clWeatherDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/details_background"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tvWeatherDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Humedad -->
                    <LinearLayout
                        android:id="@+id/llHumidityDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        app:layout_constraintWidth_percent="0.5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/llWindDetail">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_humidity"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Humedad" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humedad"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45%"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- Viento -->
                    <LinearLayout
                        android:id="@+id/llWindDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        app:layout_constraintWidth_percent="0.5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/llHumidityDetail"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wind"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Viento" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Viento"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvWindSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 km/h"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- UV Index -->
                    <LinearLayout
                        android:id="@+id/llUvDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintWidth_percent="0.5"
                        app:layout_constraintTop_toBottomOf="@id/llHumidityDetail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/llRainDetail">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_uv"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="UV" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Índice UV"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvUvIndex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alto"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/uv_high_color"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- Lluvia -->
                    <LinearLayout
                        android:id="@+id/llRainDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintWidth_percent="0.5"
                        app:layout_constraintTop_toBottomOf="@id/llWindDetail"
                        app:layout_constraintStart_toEndOf="@+id/llUvDetail"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_rain"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Lluvia" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lluvia"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvRainChance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección de pronóstico mejorada -->
        <LinearLayout
            android:id="@+id/forecastHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardWeather"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvForecastTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pronóstico 5 días"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="12dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/accent_color"
                android:fontFamily="sans-serif-medium"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- RecyclerView con mejor estilo -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/forecastHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvForecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:overScrollMode="never" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>