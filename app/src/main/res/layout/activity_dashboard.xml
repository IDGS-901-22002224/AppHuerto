                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ivEstadoIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check_circle"
                            app:tint="@color/primary_green" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:id="@+id/tvEstadoTitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado General"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvEstadoDescripcion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Todos los sistemas funcionan correctamente"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvEstadoStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excelente"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:background="@drawable/status_badge_green"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
